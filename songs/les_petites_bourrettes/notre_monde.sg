  \lilypond{Notre_monde}

  \begin{verse}
    C'est vrai qu'il \[Em]est beau notre monde
    Les fusils tirent des colombes
    Des feux de \[D]joie \dots~seulement
  \end{verse}

  \begin{verse*}
    On s'aime sous la Lune ronde
    Et puis nos cœurs y vagabondent
    On s'y embrasse \dots~tellement
  \end{verse*}

  \begin{verse*}
    Qu'on peut arpenter toutes les routes
    Et puis on passe entre les doutes
    Bien accueillis \dots~partout
  \end{verse*}

  \begin{verse*}
    Et sous les chapeaux des pontifes
    Épouvantails décoratifs
    Mis au rebut \dots~ben y'a des trous
  \end{verse*}

  \begin{chorus}
    {\nolyrics C G Am \rep{2}}
  \end{chorus}

  \begin{verse}
    C'est sûr qu'il est beau notre monde
    Et que sous le soleil qui plombe
    Dites-vous bien que toute peine est perdue
  \end{verse}

  \begin{verse*}
    Car dans les salons comme on aime
    Les chiens disent enfin des poèmes
    Sans chute \dots~et suspendus
  \end{verse*}

  \begin{verse*}
    On les écoute pour se taire
    Se souvenant les révoltes d'hier
    Tant que pourrissent \dots~nos armes
  \end{verse*}

  \begin{verse*}
    Et ça fait un joyeux vacarme
    Dans ce monde qui n'a pas de nom
    Et que l'on appelle \dots~de nos vœux
  \end{verse*}

\endsong
